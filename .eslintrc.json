{
  "root": true,
  "extends": [
    "@meteorjs/eslint-config-meteor"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": ["error", 120],
    "no-console": 0,
    "meteor/no-session": [
      0
    ]
  }
}